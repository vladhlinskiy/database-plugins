{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "MySQL",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Driver Name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "default": "mysql"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host",
          "widget-attributes": {
            "default": "localhost"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "3306"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textbox",
          "label": "Table Name",
          "name": "tableName"
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "SSL",
      "properties": [
        {
          "label": "Use SSL",
          "name": "useSSL",
          "widget-type": "select",
          "widget-attributes": {
            "default": "If available",
            "values": ["No", "If available", "Require"]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Keystore URL",
          "name": "clientCertificateKeyStoreUrl"
        },
        {
          "widget-type": "password",
          "label": "Keystore password",
          "name": "clientCertificateKeyStorePassword"
        },
        {
          "widget-type": "textbox",
          "label": "Truststore URL",
          "name": "trustCertificateKeyStoreUrl"
        },
        {
          "widget-type": "password",
          "label": "Truststore password",
          "name": "trustCertificateKeyStorePassword"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use compression protocol",
          "name": "useCompression",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "On"
            },
            "off": {
              "value": "false",
              "label": "Off"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "textbox",
          "label": "SQL_MODE",
          "name": "sql_mode"
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Key",
            "value-placeholder": "Value",
            "kv-delimiter": "=",
            "delimiter": ";"
          }
        },
        {
          "widget-type": "toggle",
          "label": "Auto reconnect",
          "name": "autoReconnect",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "On"
            },
            "off": {
              "value": "false",
              "label": "Off"
            },
            "default": "false"
          }
        }
      ]
    }
  ],
  "outputs": [],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
