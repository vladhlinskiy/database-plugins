{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "select",
          "label": "Run Condition",
          "name": "runCondition",
          "widget-attributes": {
            "values": [
              "completion",
              "success",
              "failure"
            ],
            "default": "success"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Driver Name",
          "name": "jdbcPluginName",
          "widget-attributes": {
            "default": "mysql"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host",
          "widget-attributes": {
            "default": "localhost"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "port",
          "widget-attributes": {
            "default": "3306"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textarea",
          "label": "Query",
          "name": "query",
          "widget-attributes": {
            "rows": "4"
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "SSL",
      "properties": [
        {
          "label": "Use SSL",
          "name": "useSSL",
          "widget-type": "select",
          "widget-attributes": {
            "default": "If available",
            "values": ["No", "If available", "Require"]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Keystore URL",
          "name": "clientCertificateKeyStoreUrl"
        },
        {
          "widget-type": "password",
          "label": "Keystore password",
          "name": "clientCertificateKeyStorePassword"
        },
        {
          "widget-type": "textbox",
          "label": "Truststore URL",
          "name": "trustCertificateKeyStoreUrl"
        },
        {
          "widget-type": "password",
          "label": "Truststore password",
          "name": "trustCertificateKeyStorePassword"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "radio-group",
          "label": "Use compression protocol",
          "name": "useCompression",
          "widget-attributes": {
            "layout": "inline",
            "default": "false",
            "options": [
              {
                "id": "true",
                "label": "True"
              },
              {
                "id": "false",
                "label": "False"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "SQL_MODE",
          "name": "sql_mode"
        },
        {
          "widget-type": "keyvalue",
          "label": "Connection Arguments",
          "name": "connectionArguments",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "Key",
            "value-placeholder": "Value",
            "kv-delimiter": "=",
            "delimiter": ";"
          }
        },
        {
          "widget-type": "radio-group",
          "label": "Auto reconnect",
          "name": "autoReconnect",
          "widget-attributes": {
            "layout": "inline",
            "default": "false",
            "options": [
              {
                "id": "true",
                "label": "True"
              },
              {
                "id": "false",
                "label": "False"
              }
            ]
          }
        }
      ]
    }
  ]
}
